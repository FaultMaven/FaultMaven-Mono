# =============================================================================
# FaultMaven Configuration Template
# =============================================================================

# Core Settings
# CHAT_PROVIDER options: fireworks, openai, local, gemini, huggingface, openrouter, anthropic
CHAT_PROVIDER="fireworks"
# CLASSIFIER_PROVIDER options: huggingface, openai, fireworks
CLASSIFIER_PROVIDER="huggingface"
SESSION_TIMEOUT=1800

# =============================================================================
# LLM Provider API Keys & Models
# =============================================================================

# Fireworks AI
FIREWORKS_API_KEY="your-fireworks-api-key"
FIREWORKS_MODEL="accounts/fireworks/models/llama-v3p1-8b-instruct"

# OpenAI
OPENAI_API_KEY="your-openai-api-key"
OPENAI_MODEL="gpt-4o"

# Google Gemini
GEMINI_API_KEY="your-gemini-api-key"
GEMINI_MODEL="gemini-2.5-pro"

# Hugging Face
HUGGINGFACE_API_KEY="your-huggingface-api-key"
HUGGINGFACE_MODEL="tiiuae/falcon-7b-instruct"

# OpenRouter
OPENROUTER_API_KEY="your-openrouter-api-key"

# Local Server
LOCAL_LLM_URL="localhost:5000" 
LOCAL_LLM_MODEL="Phi-3-mini-128k-instruct-onnx"

# =============================================================================
# Services
# =============================================================================

# Web Search
TAVILY_API_KEY=""

# MCP Server
MCP_SERVER_URL="http://localhost:8080"

# Observability
# Option 1: Use team Opik server (recommended)
# NOTE: Ensure 'opik.faultmaven.local' resolves in your /etc/hosts file
OPIK_USE_LOCAL=true
OPIK_LOCAL_HOST=opik.faultmaven.local
OPIK_LOCAL_URL=http://opik.faultmaven.local:30080
OPIK_PROJECT_NAME="FaultMaven Development" 
OPIK_API_KEY=local-dev-key

# Option 2: Use Comet cloud (if you have an account)
# OPIK_USE_LOCAL=false
# COMET_API_KEY="your-comet-api-key"